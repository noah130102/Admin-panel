    <script>
      let user = null;
      const token = localStorage.getItem("token");

      document.addEventListener("DOMContentLoaded", async function () {
        if (token) {
          const profileResponse = await axios.get("/profile", {
            headers: {
              "Content-Type": "application/json",
              token: token,
            },
          });

          user = profileResponse.data.role;

          const res = await axios.get(`/permissions/${user}`);

          const permissions = res.data.permissions;

          const addUserDiv = document.getElementById("addUserDiv");
          const addRoleDiv = document.getElementById("addRoleDiv");
          const moreDetailsDiv = document.getElementById("moreDetailsDiv");
          const uDDiv = document.getElementById("uDDiv");

          var flag = false;
          if (permissions.includes("allowAll")) {
            addUserDiv.innerHTML = `<a id="addUserLink" class="text-bold text-lg " href="/addUserByAdmin">Add User</a>`;
            addRoleDiv.innerHTML = `<a id="addRoleLink" class="text-bold text-lg "  href="/addRole" class="nav-link">Add Role</a><br />`;
            moreDetailsDiv.innerHTML =
              ' <a class="text-bold text-lg" href="/listUserDetails">More details</a>';

            // uDDiv.innerHTML = `<a href="/updateRole" class="nav-link">Update or Delete Role</a>`;
            flag = true;
          } else if (permissions.length === 0) {
            addUserDiv.innerHTML = `<button id="addUserButton">Locked</button>`;
            addRoleDiv.innerHTML = `<button id="addRoleButton">Locked</button>`;
            moreDetailsDiv.innerHTML = `<button id="moreDetailsButton">Locked</button>`;
            // uDDiv.innerHTML = `<button id="uDDivButton">Locked</button>`;
          }

          if (
            permissions.includes("allowDisplay") &&
            !flag &&
            !permissions.includes("allowEdit")
          ) {
            moreDetailsDiv.innerHTML =
              ' <a class="text-bold text-lg"  href="/listUserDetails">More details</a>';
            addUserDiv.innerHTML = `<button id="addUserButton">Locked</button>`;
            addRoleDiv.innerHTML = `<button id="addRoleButton">Locked</button>`;
            uDDiv.innerHTML = `<button id="uDDivButton">Locked</button>`;
          } else if (
            permissions.includes("allowEdit") &&
            !permissions.includes("allowDisplay") &&
            !flag
          ) {
            addUserDiv.innerHTML = `<button id="addUserButton">Locked</button>`;
            addRoleDiv.innerHTML = `<button id="addRoleButton">Locked</button>`;
            moreDetailsDiv.innerHTML =
              ' <button id="uDDivButton">Locked</button>';

            uDDiv.innerHTML = `<a class="text-bold text-lg"  href="/updateRole" class="nav-link">Update or Delete Role</a>`;
          }

          const totalRoles = document.getElementById("totalRoles");
          const roles = await axios.get("/getRoles");

          totalRoles.innerHTML = `${roles.data.length}`;
        } else {
          document.body.style.display = "none";
        }
      });

      const fetchData = async () => {
        try {
          const response = await axios.get("/getUsers");

          return response.data;
        } catch (error) {
          console.log(error);
          return;
        }
      };

      const displayData = async () => {
        const usersAll = document.querySelector("#userDisplay");
        const data = await fetchData();
        if (!data) {
          return;
        }
        let count = 0;
        let result = "";
        for (let i = data.length - 1; i >= 0; i--) {
          count++;
          const item = data[i];
          result += `
          <table class="table">
            <tbody>
              <tr>
                <td class="text-bold text-lg pl-5" style="width: 20%;">
                  ${item.username}
                </td>
                <td class="text-info pr-8" style="width: 80%;">
                  ${item.role}
                </td>
              </tr>
            </tbody>
          </table>
          `;
          if (count === 5) {
            break;
          }
        }
        usersAll.innerHTML = result;
      };

      displayData();

      document.getElementById("logout").addEventListener("click", () => {
        localStorage.removeItem("token");
        window.location = "/login";
      });
    </script>
